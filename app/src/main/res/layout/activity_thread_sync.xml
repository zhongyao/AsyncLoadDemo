<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context="com.thread.threadsync.ThreadSyncActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="线程同步的几种方式"
        android:textColor="#ff0000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSync1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#009900"
        android:text="synchronized"
        android:textColor="#ffff00"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSync2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#009900"
        android:text="wait和notify"
        android:textColor="#ffff00"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSync3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#009900"
        android:text="volatile"
        android:textColor="#ffff00"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSync4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#009900"
        android:text="重入锁(ReentrantLock)"
        android:textColor="#ffff00"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSync5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#009900"
        android:text="ThreadLocal"
        android:textColor="#ffff00"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSync6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#009900"
        android:text="LinkedBlockingQueue"
        android:textColor="#ffff00"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSync7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#009900"
        android:text="原子变量(AtomicInteger)"
        android:textColor="#ffff00"
        android:textStyle="bold" />

</LinearLayout>